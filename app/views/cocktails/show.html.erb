<h1><%= @cocktail.name %></h1>
<%= cl_image_tag @cocktail.photo, height: 500, width: 300, crop: :fill %>


<% @cocktail.doses.each do |dose| %>
<%= dose.description %>
<%= dose.ingredient.name %>

<%= link_to "Delete a dose", dose_path(dose.id), method: :delete, data: { confirm: "Are you sure?" } %>

<br>

<% end %>

<%= link_to "Add a dose", new_cocktail_dose_path(@cocktail.id) %>
<%= link_to "Back", cocktails_path %>
